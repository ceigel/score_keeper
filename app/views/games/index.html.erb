<h1>Listing games</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th ></th>
      <th ></th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td ><%= "Players: #{game.players.count}" %></td>
        <td><%= link_to "Show", game %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
