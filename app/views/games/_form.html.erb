<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :player_names, as: :text, autofocus: true, input_html: {rows: 10, cols: 5} %>
  </div>

  <div class="form-actions">
    <%= link_to 'Cancel', games_path, role: "button", class:"btn btn-danger" %>
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>
